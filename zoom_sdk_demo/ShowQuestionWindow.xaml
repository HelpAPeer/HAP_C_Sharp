<Window x:Class="zoom_sdk_demo.ShowQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zoom_sdk_demo"
        mc:Ignorable="d"
        Title="ShowQuestionWindow" Height="360" Width="640">
    <Grid>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center"> 
            <TextBlock x:Name="QuestionText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24pt" Text="{Binding Path=question}"></TextBlock>
            <TextBlock x:Name="ReminderText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Foreground="DarkGray">Use characters !~ to log question results.</TextBlock>
        </StackPanel>
        
        
    </Grid>
</Window>
